<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:paddingTop="10dp"
        android:text="Make everything simple"
        android:textSize="25dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="40dp"
        android:layout_height="85dp">
        <Button
            android:id="@+id/interest_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="健身"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/interest_2"
            android:text="跑步"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/interest_3"
            android:text="游泳"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <Button
            android:id="@+id/interest_4"
            android:text="篮球"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/interest_5"
            android:text="网球"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>



        <Button
            android:id="@+id/interest_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="羽毛球"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <Button
            android:id="@+id/interest_7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="旅游"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/interest_8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="音乐"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/interest_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="美术"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <Button
            android:id="@+id/interest_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="自习"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/interest_11"
            android:layout_width="wrap_content"
            android:text="设计"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/interest_12"
            android:layout_width="wrap_content"
            android:text="程序"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="40dp"
        android:paddingTop="10dp"
        android:id="@+id/user_self_def"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="submit"/>

</LinearLayout>